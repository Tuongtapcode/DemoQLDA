pipeline {
    agent any

    environment {
        DOCKER_HUB_CREDENTIALS = credentials('dockerhub-credentials')
        IMAGE_NAME = 'tuongtapcode/demoqlda'
        IMAGE_TAG = "${BUILD_NUMBER}"
    }

    stages {
        stage('Checkout') {
            steps {
                git branch: 'main', url: 'https://github.com/Tuongtapcode/DemoQLDA.git'
            }
        }

        stage('Build Docker Image') {
            steps {
                dir('MuonTraSach') {
                    bat "docker build -t ${IMAGE_NAME}:${IMAGE_TAG} ."
                    bat "docker tag ${IMAGE_NAME}:${IMAGE_TAG} ${IMAGE_NAME}:latest"
                }
            }
        }

        stage('Test Application') {
            steps {
                bat "docker run --rm ${IMAGE_NAME}:${IMAGE_TAG} python -m unittest discover"
            }
        }

        stage('Push to DockerHub') {
            when {
                branch 'main'
            }
            steps {
                script {
                    docker.withRegistry('https://registry.hub.docker.com', 'dockerhub-credentials') {
                        docker.image("${IMAGE_NAME}:${IMAGE_TAG}").push()
                        docker.image("${IMAGE_NAME}:latest").push()
                    }
                }
            }
        }
    }

post {
    always {
        echo 'Cleaning up Docker resources...'
        script {
            node {
                bat 'docker system prune -f || true'
                bat 'docker container prune -f || true'
            }
        }
    }
    success {
        echo '✅ Pipeline completed successfully!'
    }
    failure {
        echo '❌ Pipeline failed!'
    }
}
}
