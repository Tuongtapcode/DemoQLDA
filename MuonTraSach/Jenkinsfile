pipeline {
    agent any

    stages {
        stage('Checkout') {
            steps {
                // Với "Pipeline script from SCM", stage này có thể bỏ,
                // vì Jenkins đã tự checkout repo trước đó.
                checkout scm
            }
        }

        stage('Build (skip for now)') {
            steps {
                echo "⏭️ Skipping Docker build & push (Docker chưa kết nối Jenkins)."
            }
        }
    }

    post {
        success {
            echo '✅ Pipeline chạy thành công (chưa build Docker).'
        }
        failure {
            echo '❌ Pipeline thất bại!'
        }
    }
}
