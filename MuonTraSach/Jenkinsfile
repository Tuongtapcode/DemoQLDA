pipeline {
    agent any

    environment {
        GIT_REPO_URL = 'https://github.com/Tuongtapcode/DemoQLDA.git'
        GIT_BRANCH = 'main'
    }

    stages {
        stage('Checkout') {
            steps {
                // Xóa workspace trước khi checkout để tránh lỗi repo hỏng
                deleteDir()

                // Checkout repo public
                git branch: "${GIT_BRANCH}", url: "${GIT_REPO_URL}"
            }
        }

        stage('Build (skip for now)') {
            steps {
                echo "⏭️ Skipping Docker build & push (Docker chưa kết nối Jenkins)."
            }
        }
    }

    post {
        success {
            echo '✅ Pipeline chạy thành công (chưa build Docker).'
        }
        failure {
            echo '❌ Pipeline thất bại!'
        }
    }
}
