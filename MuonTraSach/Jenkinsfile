pipeline {
    agent any

    stages {
        stage('Checkout') {
            steps {
                git branch: 'main', url: 'https://github.com/Tuongtapcode/DemoQLDA.git'
            }
        }

        stage('Build (skip for now)') {
            steps {
                echo "⏭️ Skipping Docker build & push (Docker chưa kết nối Jenkins)."
            }
        }
    }

    post {
        success {
            echo '✅ Pipeline chạy thành công (chưa build Docker).'
        }
        failure {
            echo '❌ Pipeline thất bại!'
        }
    }
}
