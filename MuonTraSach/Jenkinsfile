pipeline {
    agent any

    options {
        // Ngăn Jenkins tự checkout lần nữa
        skipDefaultCheckout(true)
    }

    stages {
        stage('Checkout') {
            steps {
                // Tự checkout thủ công
                git branch: 'main', url: 'https://github.com/Tuongtapcode/DemoQLDA.git'
            }
        }

        stage('Hello') {
            steps {
                echo '✅ Jenkins pipeline is working!'
                sh 'ls -la'
            }
        }
    }
}
