pipeline {
    agent any

    environment {
        IMAGE_NAME = "muontrasach"
        CONTAINER_NAME = "muontrasach"
        PORT = "5000"
    }

    stages {
        stage('Checkout') {
            steps {
                echo "Checkout code từ GitHub"
                git branch: 'main', url: 'https://github.com/username/MuonTraSach.git'
            }
        }

        stage('Build Docker Image') {
            steps {
                echo "Build Docker image cho Flask app"
                sh "docker build -t ${IMAGE_NAME} ."
            }
        }

        stage('Stop old Container') {
            steps {
                echo "Dừng container cũ nếu có"
                sh "docker rm -f ${CONTAINER_NAME} || true"
            }
        }

        stage('Deploy Container') {
            steps {
                echo "Chạy container mới"
                sh "docker run -d --name ${CONTAINER_NAME} -p ${PORT}:5000 ${IMAGE_NAME}"
            }
        }

        stage('Test Deployment') {
            steps {
                echo "Kiểm tra Flask app"
                sh "curl -f http://localhost:${PORT} || exit 1"
            }
        }
    }

    post {
        success {
            echo "✅ Deployment thành công! Truy cập http://localhost:${PORT}"
        }
        failure {
            echo "❌ Deployment thất bại!"
        }
    }
}
